.components {
	padding: 0 30px;
	.owl-nav {
	    position: absolute;
	    top: 0;
	    left: 0;
	    bottom: 0;
	    height: 50px;
	    width: 100%;
	    margin: auto;
	    .owl-prev {
		    width: 30px;
		    border-radius: 25px 0 0 25px;
		    height: 50px;
		    background: #bbb;
		    float: left;
		    text-align: center;
		    line-height: 50px;
		    font-size: 22px;
		    color: #fff;
	    }
	    .owl-next {
		    width: 30px;
		    border-radius: 0 25px 25px 0;
		    height: 50px;
		    background: #bbb;
		    float: right;
		    text-align: center;
		    line-height: 50px;
		    font-size: 22px;
		    color: #fff;

	    }
	}
}

.component-title {
	font-weight: 600;
    font-size: 26px;
    margin-bottom: 20px;
}